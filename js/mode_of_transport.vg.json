{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 300,
  "height": 400,
  "data": {
    "url": "./data/mode_of_transport.csv"
  },
  "title": {
    "text": "Mode of Travel Transport",
    "fontSize": 18
  },
  "params": [
    {
      "name": "selectedYear",
      "value": "2024",
      "bind": {
        "input": "select",
        "options": ["2023", "2024"],
        "name": "Select Year: "
      }
    }
  ],
  "transform": [
    { "filter": "datum.MODE_OF_TRANSPORT != 'TOTAL'" },
    { "calculate": "toNumber(datum[selectedYear])", "as": "visitors" }
  ],
  "mark": { "type": "arc", "outerRadius": 150 },
  "encoding": {
    "theta": {
      "field": "visitors",
      "type": "quantitative",
      "title": "Total Arrivals"
    },
    "color": {
      "field": "MODE OF TRANSPORT",
      "type": "nominal",
      "title": "Mode of Transport",
      "scale": { "scheme": "tableau20" },
      "legend": {
        "labelColor": "#555555",
        "titleColor": "#555555"
      }
    },
    "tooltip": [
      { "field": "MODE OF TRANSPORT", "type": "nominal", "title": "Mode" },
      {
        "field": "visitors",
        "type": "quantitative",
        "title": "Arrivals",
        "format": ","
      },
      { "field": "% SHARE 2024", "type": "quantitative", "title": "Share (%)" }
    ]
  },
  "view": { "stroke": null },
  "config": {
    "title": {
      "anchor": "start",
      "fontSize": 16,
      "color": "#333333"
    }
  }
}
