{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": "container",
  "background": "black",
  "projection": {
    "type": "naturalEarth1",
    "center": {
      "expr": "RegionSelect=='West Malaysia' ? [102, 4] : (RegionSelect=='East Malaysia' ? [114, 4] : [109, 4])"
    },
    "scale": {
      "expr": "RegionSelect=='Both' ? 4000 : (RegionSelect=='West Malaysia' ? 5500 : 4800)"
    }
  },
  "params": [
    {
      "name": "RegionSelect",
      "value": "Both",
      "bind": {
        "input": "select",
        "options": ["West Malaysia", "East Malaysia", "Both"],
        "labels": ["West Malaysia", "East Malaysia", "Both"],
        "name": "Region: "
      }
    }
  ],
  "layer": [
    {
      "data": {
        "url": "../data/ne_10m_admin_1_states_provinces.topojson",
        "format": {
          "type": "topojson",
          "feature": "ne_10m_admin_1_states_provinces"
        }
      },
      "transform": [{ "filter": "datum.properties.admin === 'Malaysia'" }],
      "mark": { "type": "geoshape", "stroke": "white", "fill": "black" }
    },
    {
      "data": {
        "url": "../data/ne_10m_admin_1_states_provinces.topojson",
        "format": {
          "type": "topojson",
          "feature": "ne_10m_admin_1_states_provinces"
        }
      },
      "transform": [
        { "filter": "datum.properties.admin === 'Malaysia'" },
        {
          "lookup": "properties.name",
          "from": {
            "data": { "url": "../data/visitors_by_state.csv" },
            "key": "STATE",
            "fields": ["TOTAL_VISITORS", "TOP5_COUNTRIES"]
          }
        }
      ],
      "mark": { "type": "geoshape", "stroke": "white", "strokeWidth": 2 },
      "encoding": {
        "color": {
          "field": "TOTAL_VISITORS",
          "type": "quantitative",
          "legend": {
            "orient": "bottom-left",
            "direction": "horizontal",
            "title": "Visitor Popularity (%)",
            "labelColor": "white",
            "titleColor": "white",
            "labelFontSize": 12,
            "titleFontSize": 14
          }
        },
        "tooltip": [
          { "field": "properties.name", "type": "nominal", "title": "State" },
          {
            "field": "TOTAL_VISITORS",
            "type": "quantitative",
            "title": "Visitors (%)"
          },
          {
            "field": "TOP5_COUNTRIES",
            "type": "nominal",
            "title": "Top 5 Countries"
          }
        ]
      }
    },
    {
      "data": { "url": "../data/visitors_by_state.csv" },
      "mark": {
        "type": "rect",
        "width": 35,
        "height": 18,
        "fill": "black",
        "fillOpacity": 0.5
      },
      "encoding": {
        "longitude": { "field": "LON", "type": "quantitative" },
        "latitude": { "field": "LAT", "type": "quantitative" }
      }
    },
    {
      "data": { "url": "../data/visitors_by_state.csv" },
      "mark": {
        "type": "text",
        "color": "white",
        "fontSize": 15,
        "fontWeight": "bold",
        "align": "center",
        "baseline": "middle"
      },
      "encoding": {
        "longitude": { "field": "LON", "type": "quantitative" },
        "latitude": { "field": "LAT", "type": "quantitative" },
        "text": { "field": "TOTAL_VISITORS", "type": "quantitative" },
        "tooltip": [
          { "field": "STATE", "type": "nominal", "title": "State" },
          {
            "field": "TOTAL_VISITORS",
            "type": "quantitative",
            "title": "Visitors (%)"
          },
          {
            "field": "TOP5_COUNTRIES",
            "type": "nominal",
            "title": "Top 5 Countries"
          }
        ]
      }
    }
  ]
}
