{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "Treemap of Tourist Expenditure in Malaysia by Category (2024)",
  "width": 1200,
  "height": 400,
  "padding": 2.5,
  "title": {
    "text": "Visitor Expenditure in Malaysia",
    "fontSize": 25,
    "anchor": "start",
    "font": "Crimson Text",
    "fontWeight": "bold"
  },
  "signals": [
    {
      "name": "layout",
      "value": "squarify",
      "bind": {
        "input": "select",
        "options": ["squarify", "binary", "slicedice"],
        "name": "Layout type: "
      }
    }
  ],

  "data": [
    {
      "name": "tree",
      "url": "./data/expenditure.json",
      "transform": [
        {
          "type": "stratify",
          "key": "id",
          "parentKey": "parent"
        },
        {
          "type": "treemap",
          "field": "value",
          "method": { "signal": "layout" },
          "ratio": 1.6,
          "size": [{ "signal": "width" }, { "signal": "height" }]
        },
        {
          "type": "formula",
          "as": "group",
          "expr": "datum.parent == 'Tourist Expenditure' ? '' : datum.parent"
        }
      ]
    },
    {
      "name": "nodes",
      "source": "tree",
      "transform": [{ "type": "filter", "expr": "datum.children" }]
    },
    {
      "name": "leaves",
      "source": "tree",
      "transform": [{ "type": "filter", "expr": "!datum.children" }]
    },
    {
      "name": "filtered_leaves",
      "source": "leaves",
      "transform": [
        { "type": "filter", "expr": "datum.id != 'Tourist Expenditure'" }
      ]
    },
    {
      "name": "filtered_nodes",
      "source": "nodes",
      "transform": [
        { "type": "filter", "expr": "datum.id != 'Tourist Expenditure'" }
      ]
    }
  ],

  "scales": [
    {
      "name": "color",
      "type": "ordinal",
      "domain": { "data": "tree", "field": "group" },
      "range": ["#3182bd", "#31a354", "#ff7f0e", "#9467bd"]
    },
    {
      "name": "fontsize",
      "type": "ordinal",
      "domain": [0, 1, 2, 3],
      "range": [100, 28, 20, 14]
    },
    {
      "name": "opacity",
      "type": "ordinal",
      "domain": [0, 1, 2, 3],
      "range": [0.1, 0.5, 0.8, 1.0]
    }
  ],

  "marks": [
    {
      "type": "rect",
      "from": { "data": "filtered_leaves" },
      "encode": {
        "enter": {
          "stroke": { "value": "#fff" },
          "tooltip": {
            "signal": "{'Category': datum.id, 'Expenditure (RM million)': format(datum.value, ',.2f')}"
          }
        },
        "update": {
          "x": { "field": "x0" },
          "y": { "field": "y0" },
          "x2": { "field": "x1" },
          "y2": { "field": "y1" },
          "fill": { "scale": "color", "field": "group" }
        },
        "hover": { "fill": { "value": "#E5E5E5" } }
      }
    },
    {
      "type": "text",
      "from": { "data": "filtered_nodes" },
      "interactive": false,
      "encode": {
        "enter": {
          "align": { "value": "center" },
          "baseline": { "value": "middle" },
          "fill": { "value": "#000" },
          "text": { "field": "id" }
        },
        "update": {
          "x": { "signal": "0.5 * (datum.x0 + datum.x1)" },
          "y": { "signal": "0.5 * (datum.y0 + datum.y1)" },
          "fontSize": { "scale": "fontsize", "field": "depth" },
          "fillOpacity": { "scale": "opacity", "field": "depth" }
        }
      }
    }
  ]
}
