{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Dual-axis line chart: selected currency/MYR vs Tourist Arrivals with independent scales",
  "width": 400,
  "height": 400,

  "params": [
    {
      "name": "Currency",
      "value": "USD",
      "bind": {
        "input": "select",
        "options": [
          "USD",
          "GBP",
          "EUR",
          "JPY100",
          "CHF",
          "AUD",
          "CAD",
          "SGD",
          "HKD100"
        ],
        "labels": [
          "USD",
          "GBP",
          "EUR",
          "JPY (100)",
          "CHF",
          "AUD",
          "CAD",
          "SGD",
          "HKD (100)"
        ],
        "name": "Select Currency: "
      }
    }
  ],

  "layer": [
    {
      "data": { "url": "./data/exchange-rates.csv" },
      "transform": [
        {
          "calculate": "datetime(year(datum.DATE), month(datum.DATE), 1)",
          "as": "YearMonth"
        },
        { "calculate": "toNumber(datum[Currency])", "as": "Rate" },
        {
          "aggregate": [{ "op": "average", "field": "Rate", "as": "Avg_Rate" }],
          "groupby": ["YearMonth"]
        }
      ],
      "mark": { "type": "line", "color": "blue", "point": true },
      "encoding": {
        "x": {
          "field": "YearMonth",
          "type": "temporal",
          "title": "Month",
          "timeUnit": "yearmonth",
          "axis": {
            "format": "%b %Y",
            "labelAngle": -40,
            "labelAlign": "right"
          }
        },
        "y": {
          "field": "Avg_Rate",
          "type": "quantitative",
          "axis": {
            "title": { "signal": "Currency + '/MYR'" },
            "titleColor": "blue",
            "orient": "left"
          }
        },
        "tooltip": [
          {
            "field": "YearMonth",
            "type": "temporal",
            "title": "Month",
            "format": "%B %Y"
          },
          {
            "field": "Avg_Rate",
            "type": "quantitative",
            "title": { "signal": "Currency + '/MYR'" },
            "format": ".4f"
          }
        ]
      }
    },
    {
      "data": { "url": "./data/monthly_visitors.csv" },
      "transform": [
        {
          "calculate": "datetime(datum.Year, indexof(['JANUARY','FEBRUARY','MARCH','APRIL','MAY','JUNE','JULY','AUGUST','SEPTEMBER','OCTOBER','NOVEMBER','DECEMBER'], datum.MONTH), 1)",
          "as": "YearMonth"
        }
      ],
      "mark": { "type": "line", "color": "orange", "point": true },
      "encoding": {
        "x": { "field": "YearMonth", "type": "temporal" },
        "y": {
          "field": "Arrivals",
          "type": "quantitative",
          "axis": {
            "title": "Tourist Arrivals",
            "titleColor": "orange",
            "orient": "right"
          }
        },
        "tooltip": [
          {
            "field": "YearMonth",
            "type": "temporal",
            "title": "Month",
            "format": "%B %Y"
          },
          {
            "field": "Arrivals",
            "type": "quantitative",
            "title": "Tourist Arrivals",
            "format": ","
          }
        ]
      }
    }
  ],

  "resolve": { "scale": { "y": "independent" } }
}
